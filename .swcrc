{
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "decorators": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "keepClassNames": true,
        "loose": true,
        "includeDeps": true
    },
    "env": {
        "targets": {
            "node": "12"
        }
    },
    "module": {
        "type": "commonjs",
        "strict": true,
        "strictMode": true,
        "lazy": true,
        "noInterop": false
    },
    "sourceMaps": true,
    "inlineSourcesContent": true
}